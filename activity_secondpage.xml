<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".secondpage">


    <Button
        android:id="@+id/buttonBlue"
        style="@style/ButtonText"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="start"
        android:background="@drawable/blue"
        android:onClick="sendIR"
        android:text="@string/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <Button
        android:id="@+id/buttonexit"
        android:layout_width="74dp"
        android:layout_height="53dp"

        android:backgroundTint="#F60E0E"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />


    <Button
        android:id="@+id/buttonPower"
        android:layout_width="92dp"
        android:layout_height="59dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="start"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="17dp"
        android:background="@android:drawable/ic_lock_power_off"
        android:onClick="sendIR"
        android:text="@string/button_power"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonexit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />


    <Button
        android:id="@+id/buttonRed"

        android:layout_width="104dp"
        android:layout_height="55dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="start"
        android:background="@drawable/button_red"
        android:onClick="sendIR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313"
        tools:text="@string/red" />

    <Button
        android:id="@+id/buttonGreen"
        style="@style/ButtonText"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="start"
        android:background="@drawable/button_green"
        android:onClick="sendIR"
        android:text="@string/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <Button
        android:id="@+id/buttonWhite"
        style="@style/ButtonText"
        android:layout_width="101dp"
        android:layout_height="55dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="start"
        android:background="@drawable/button_white"
        android:onClick="sendIR"
        android:text="@string/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/buttonBrightnessUp"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="left|start|top"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/black"
        android:onClick="sendIR"
        android:text="@string/button_brightness_up"
        app:layout_constraintBottom_toTopOf="@+id/buttonRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWhite"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>